{
  "include": [
    "src/**/*",
    "scripts/*",
    "@types/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./@types"]
  },
  "tsimp": {
    "compilerOptions": {
      "skipLibCheck": true,
      "strict": false
    }
  }
}
